<div class="container portfolio-container">
  <div class="row">
    <div class="col-md-7">
      <% if @portfolio.image.attached? %>
      <%= image_tag @portfolio.image, width: '100%' %>
      <% end %>
    </div>

    <div class="col-md-5">
      <h1><%= @portfolio.title %></h1>

      <hr>

      <em><%= @portfolio.subtitle %></em>

      <p><%= @portfolio.body %></p>

      <hr>

      <h3>Technologies Used:</h3>

      <% @portfolio.technologies.each do |t| %>
      <p><%= t.name %></p>
      <% end %>

      <% if logged_in?(:site_admin) %>
        <div class="">
          <%= link_to "Edit Item", portfolio_edit_path(@portfolio), class: 'btn btn-warning' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
