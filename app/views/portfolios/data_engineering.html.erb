<h1>Data Engineering Portfolio Items</h1>

<%= link_to "Create New Porfofio", new_portfolio_path h if logged_in?(:site_admin) %>

<% @portfolios.each do |portfolio| %>
  <h3><%= link_to portfolio.title , portfolio_show_path(portfolio) %></h3>
  <%= image_tag portfolio.thumb_image unless portfolio.thumb_image.nil? %>
  <h4><%= portfolio.subtitle %></h4>
  <p><%= portfolio.body %></p>
  <%= link_to "Edit portfolio", portfolio_edit_path(portfolio) %>
  <br>
  <%= link_to "Delete portfolio", portfolio_path(portfolio), method: :delete, data: { confirm: 'Are you sure?' } %>

<% end %>
